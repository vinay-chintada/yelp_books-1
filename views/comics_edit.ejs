<%-	include("partials/header") %>
<div class="container">
		<form action="/comics/<%= book._id %>/?_method=PUT" method="POST">
			  <div class="form-group">
				<label for="title">Title</label>
				<input type="text" class="form-control" name="title" value="<%= book.title%>" >
			  </div>
			  <div class="form-group">
				<label for="description">Description</label>
				<input type="text" class="form-control" name="description" value="<%= book.description%>"  >
			  </div>
			  <div class="form-group">
				<label for="author">Author</label>
				<input type="text" class="form-control" name="author" value="<%= book.author%>" >
			  </div>
			  <div class="form-group">
				<label for="publisher">Publisher</label>
				<input type="text" class="form-control" name="publisher" value="<%= book.publisher%>" >
			  </div>
			  <div class="form-group">
				<label for="date ">Date</label>
				<input type="date" class="form-control" name="date" value="<%= book.date.toISOString().split('T')[0]%>" >
			  </div>
			  <div class="form-group">
				<label for="genre">Genre</label>
			      <select class=form-control id=genre name=genre value="<%= book.genre%>">
					<option disabled >choose below</option>
					<option <%= book.genre=== 'action' ?  'selected': '' %>>Action</option>
					<option <%= book.genre=== 'sci-fi' ?  'selected': '' %>>Sci-Fi</option>
					<option <%= book.genre=== 'shonen' ?  'selected': '' %>>Shonen</option>
					<option <%= book.genre=== 'manga' ?  'selected': '' %>>Manga</option>
					<option <%= book.genre=== 'donghua' ?  'selected': '' %>>Donghua</option>
					<option <%= book.genre=== 'supernatural' ?  'selected': '' %>>Supernatrual</option>
					<option <%= book.genre=== 'fantasy' ?  'selected': '' %>>Fantasy</option>
					<option <%= book.genre=== 'slice-of-life' ?  'selected': '' %>>Slice-of-life</option>
					<option <%= book.genre=== 'comedy' ?  'selected': '' %>>Comedy</option>
					<option <%= book.genre=== 'romance' ?  'selected': '' %>>Romance</option>
				  </select>

			  </div>
	    	  <div class="form-group">
				<label for="series">Series</label>
				<input type="text" class="form-control" name="series" value="<%= book.series%>">
			  </div>
			  <div class="form-group">
				<label for="issue">Issue</label>
				<input type="number" class="form-control" name="issue" value="<%= book.issue%>" >
			  </div>
			  <div class="form-group form-check">
				  <input type="checkbox" class=" form-check-input" name="color" <%= book.color ?'checked': '' %> >
				  <label for="color">Color?</label>
			  </div>


			  <div class="form-group">
				<label for="image">Image Link</label>
				<input type="img" class="form-control" name="image" value="<%= book.image%>" >
			  </div>
		  <button type="submit" class="btn btn-primary">Submit</button>
		</form>
</div>
<%-	include("partials/footer") %>

